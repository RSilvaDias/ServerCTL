const int DEFAULT_PORT = 2010

component provides App requires io.Output out, data.IntUtil iu, proxy.DistProxy hd {

	int port = 0

	int App:main(AppParam params[]) {

		if (params.arrayLength == 1) {
			port = iu.intFromString(params[0].string)
		} else {
			port = DEFAULT_PORT
		}

		hd.start(port)

		return 0
	}
}
